extend ../layout

append css
  link(rel='stylesheet', href='/css/blog.css')
  link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.css')


block main
  block header
    .blog-masthead
      .container
        nav.blog-nav
          if pageName === '/'
            a.blog-nav-item.active(href='/') Home
          else
            a.blog-nav-item(href='/') Home
          if pageName === '/about'
            a.blog-nav-item.active(href='/about') 關於
          else
            a.blog-nav-item(href='/about') 關於
          if pageName === '/contact'
            a.blog-nav-item.active(href='/contact') 聯繫
          else
            a.blog-nav-item(href='/contact') 聯繫

  .container
    .row
      .col-sm-8.blog-main
        block content
      .col-sm-3.col-sm-offset-1.blog-sidebar
        //- .sidebar-module.sidebar-module-inset
        //-   h4 About
        //-   p
        //-     | Etiam porta 
        //-     em sem malesuada magna
        //-     |  mollis euismod. Cras mattis consectetur purus sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.
        .sidebar-module
          h4 文章分類
          ol.list-unstyled
            each category in categories
              li
                a(href='/posts/category/' + category.name, target='_blank') #{category.name}
        .sidebar-module
          h4 友情連結
          ol.list-unstyled
            li
              a(href='#') GitHub
            li
              a(href='#') Twitter
            li
              a(href='#') Facebook      

  block footer
    footer.blog-footer
      p
        | Blog template built for 
        a(href='http://getbootstrap.com') Bootstrap
        |  by 
        a(href='https://twitter.com/mdo') @mdo
        | .
      p
        a(href='#') Back to top